{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsGuard",
    "title": "Guard Schema",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "Name of the project.",
            "$default": {
                "$source": "projectName"
            }
        },
        "route": {
            "description": "Path of the route to add the guard.",
            "type": "string"
        }
    },
    "required": ["project", "route"]
}
