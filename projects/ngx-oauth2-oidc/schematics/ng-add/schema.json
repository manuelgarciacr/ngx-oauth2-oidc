{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsNgAdd",
    "title": "ng-add rule Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the file."
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "default"
            }
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the simple schematic within.",
            "visible": false
        }
    }
}
